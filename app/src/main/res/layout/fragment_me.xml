<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/c07_bar"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/c08_text"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginTop="10dp"
                android:background="@color/c07_bar">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/place_holder_circle_80dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_toRightOf="@id/img"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="李xxx"
                    android:textColor="@color/c08_text"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/coin_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_toRightOf="@id/img"
                    android:text="竞猜币"
                    android:textColor="@color/c09_tips"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coin_tip"
                    android:layout_toRightOf="@id/img"
                    android:text="1000"
                    android:textColor="@color/c03_yellow"
                    android:textSize="20sp" />

            </RelativeLayout>

            <TextView
                style="@style/meFragmentItem"
                android:layout_marginTop="10dp"
                android:text="充值" />

            <View
                android:layout_width="15dp"
                android:layout_height="1px"
                android:background="@color/c07_bar" />

            <TextView
                style="@style/meFragmentItem"
                android:text="地址信息" />

            <View
                android:layout_width="15dp"
                android:layout_height="1px"
                android:background="@color/c07_bar" />

            <TextView
                style="@style/meFragmentItem"
                android:text="竞猜历史" />

            <View
                android:layout_width="15dp"
                android:layout_height="1px"
                android:background="@color/c07_bar" />

            <TextView
                style="@style/meFragmentItem"
                android:text="兑换记录" />

            <View
                android:layout_width="15dp"
                android:layout_height="1px"
                android:background="@color/c07_bar" />

            <TextView
                style="@style/meFragmentItem"
                android:text="关于" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="42dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_button_50dp"
                android:clickable="true"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/c08_text"
                android:textSize="17sp" />

        </LinearLayout>
    </ScrollView>
</layout>